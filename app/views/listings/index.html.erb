<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Sex</th>
      <th>Color</th>
      <th>Brand</th>
      <th>Description</th>
      <th>Category</th>
      <th>Condition</th>
      <th>Size</th>
      <th>Feature</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.price %></td>
        <td><%= listing.sex %></td>
        <td><%= listing.color %></td>
        <td><%= listing.brand %></td>
        <td><%= listing.description %></td>
        <td><%= listing.category.name %></td>
        <td><%= listing.condition %></td>
        <td><%= listing.size %></td>
        <td><%= listing.features.map {|f| f.name} %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
