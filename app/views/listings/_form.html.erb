<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <h4>Sex</h4>
  <div class="sex"></div>
    <% sex.each do |option| %>
      <%= form.label :sex, option.capitalize, class:"form-label" %>
      <%= form.radio_button :sex, option, class:"radio-button" %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.text_field :color %>
  </div>

  <div class="field">
    <%= form.label :brand %>
    <%= form.text_field :brand %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.select :category_id, categories.map {|cat| [cat.name, cat.id] } %>
  </div>

  <h4>Condition</h4>
  <div class="conditions"></div>
    <% conditions.each do |option| %>
      <%= form.label :condition, option.capitalize, class:"form-label" %>
      <%= form.radio_button :condition, option, class:"radio-button" %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :size %>
    <%= form.select :size, sizes.map {|size| size } %> 
     
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
